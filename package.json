{
  "name": "payload-api",
  "version": "1.0.6",
  "description": "A simple library to interface with the Payload API. See https://docs.payload.co for more information.",
  "main": "lib/cjs/payload.js",
  "module": "lib/mjs/payload.js",
  "exports": {
    ".": {
      "import": "./lib/mjs/payload.js",
      "require": "./lib/cjs/payload.js"
    }
  },
  "types": "types/index.d.ts",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "node build.mjs",
    "clean": "rm -rf lib",
    "prepare": "husky",
    "eslint": "eslint src --ext .js --fix",
    "prettier": "prettier --write 'src/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/payload-code/payload-node.git"
  },
  "author": "Payload",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/payload-code/payload-node/issues"
  },
  "homepage": "https://github.com/payload-code/payload-node#readme",
  "dependencies": {
    "@armrest/client": "^0.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@faker-js/faker": "^8.0.1",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "esbuild": "^0.18.19",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-exports": "^1.0.0-beta.5",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "sucrase": "^3.34.0"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "./tests/__setup__/globalSetup.js"
    ]
  }
}
